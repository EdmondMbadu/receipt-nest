rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // User's receipts subcollection
      match /receipts/{receiptId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's merchants subcollection
      match /merchants/{merchantId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's monthly summaries subcollection
      match /monthlySummaries/{summaryId} {
        allow read: if isOwner(userId);
        // Write is handled by Cloud Functions only
        allow write: if isOwner(userId);
      }
    }
    
    // Global categories (read-only for authenticated users)
    match /categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only via console
    }

    // Public graph share links
    match /graphShares/{shareId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
    }
  }
}
